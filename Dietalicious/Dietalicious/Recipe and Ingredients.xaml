<Window x:Class="Dietalicious.Recipe_and_Ingredients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dietalicious"
        mc:Ignorable="d"
        Title="Recipe_and_Ingredients" Height="450" Width="800">
    <Grid Background="#E4DEAE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="479*"/>
            <ColumnDefinition Width="321*"/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Background="#133A1B" Height="366" VerticalAlignment="Center" Width="724" Grid.ColumnSpan="2" Margin="38,0,0,0">
            <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Left" Margin="609,39,0,0" VerticalAlignment="Top" Click="Home_Click" Background="#FFE4DEAE" Foreground="#FF011B10" FontFamily="Inter Bold" Height="39" Width="85" FontSize="15" BorderThickness="2,2,2,2">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF011B10" Opacity="0"/>
                </Button.BorderBrush>
            </Button>
            <Label Content="Label" HorizontalAlignment="Left" Height="16" Margin="391,242,0,0" VerticalAlignment="Top" Width="114"/>
            <Image x:Name="myImage"  HorizontalAlignment="Left" Height="152" Margin="87,39,0,0" VerticalAlignment="Top" Width="152"/>
            <TextBlock x:Name="TxtBoxData" HorizontalAlignment="Left" Height="142" Margin="336,95,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="358"/>
        </Grid>
        <Grid Background="#B7BF96" HorizontalAlignment="Left" Height="22" Margin="104,254,0,0" VerticalAlignment="Top" Width="162"/>
        <Grid Background="#E4DEAE" HorizontalAlignment="Left" Height="101" Margin="104,293,0,0" VerticalAlignment="Top" Width="108"/>
        <Grid Background="#E4DEAE" HorizontalAlignment="Left" Height="101" Margin="228,293,0,0" VerticalAlignment="Top" Width="108"/>
        <Grid Background="#E4DEAE" HorizontalAlignment="Left" Height="101" Margin="358,293,0,0" VerticalAlignment="Top" Width="108"/>
        <Grid Background="#E4DEAE" HorizontalAlignment="Left" Height="101" Margin="10,293,0,0" VerticalAlignment="Top" Width="108" Grid.Column="1"/>
        <Grid Background="#E4DEAE" HorizontalAlignment="Left" Height="101" Margin="144,293,0,0" VerticalAlignment="Top" Width="108" Grid.Column="1"/>
        <Label Foreground="DarkGreen"  Content="Add to Favorites" Margin="142,251,201,171"/>
        <Label Foreground="DarkGreen" Content="Add to Favorites" Margin="133,251,243,158"/>
        <Label x:Name="lblResep" Foreground="White" Content="Nama Resep" Margin="358,64,286,325" FontSize="25" FontWeight="Bold" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
